<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RecipeDetails"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dish_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_dish_name"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/recipe_shopping_list_icon"
            android:layout_width="@dimen/smallButtonWidth"
            android:layout_height="@dimen/smallButtonHeight"
            app:srcCompat="@drawable/carrito_simbolo" />
    </LinearLayout>

    <ScrollView android:id="@+id/mealDetailsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin">

            <ImageView
                android:id="@+id/dish_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:srcCompat="@drawable/primer_plat" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ingredients:"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/ingredient1_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eggplants"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ingredient2_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomato"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />


            <TextView
                android:id="@+id/ingredient3_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salt"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Steps to follow:"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/steps_recipe_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use your imagination"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>