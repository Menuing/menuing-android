<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/colorBigText</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SubTittle">
        <item name="android:textSize">@dimen/largeText</item>
        <item name="android:textColor">@color/colorBigText</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="InstructionText">
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="weekly_meal_tittle">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/colorButtonBackground</item>
    </style>

    <style name="profile_button_style">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:background">@color/colorButtonBackground</item>
    </style>

    <style name="button_delete_style">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:background">@color/colorButtonBackground</item>
    </style>

    <style name="scroll_list">
        <item name="android:background">@color/colorScrollList</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
