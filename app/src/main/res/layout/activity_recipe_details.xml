<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RecipeDetails">

    <ImageView
        android:id="@+id/dish_image"
        android:layout_width="316dp"
        android:layout_height="172dp"
        app:srcCompat="@drawable/primer_plat"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="64dp" />

    <ImageView
        android:id="@+id/carrito_details"
        android:layout_width="71dp"
        android:layout_height="59dp"
        app:srcCompat="@drawable/carrito_simbolo"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/dish_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_dish_name"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients:"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="252dp" />

    <TextView
        android:id="@+id/ingredient1_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eggplants"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="303dp" />

    <TextView
        android:id="@+id/ingredient2_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomato"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="335dp" />



    <TextView
        android:id="@+id/ingredient3_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salt"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="370dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps to follow:"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="396dp" />

    <TextView
        android:id="@+id/steps_recipe_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use your imagination"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="440dp" />
</android.support.constraint.ConstraintLayout>