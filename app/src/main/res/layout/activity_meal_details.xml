<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MealDetails"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_meal_title"
        style="@style/SubTittle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_dish_example"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/primer_plat" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">
            <Button
                android:id="@+id/first_recipe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_recipe"
                style="@style/button_style"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="155dp"
                android:text="@string/ratio_example"
                android:textSize="20sp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_dish_example"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />
            <ImageView
                android:id="@+id/imageView6"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                app:srcCompat="@drawable/segon_plat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">
            <Button
                android:id="@+id/first_recipe"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/button_style"
                android:text="@string/get_recipe"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ratio_example"
                android:textSize="20sp"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>