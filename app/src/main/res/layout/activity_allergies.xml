<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AllergiesActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/allergiesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:visibility="visible">

            <TextView
                android:id="@+id/allergiesTittle"
                style="@style/SubTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/allergies_tittle"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/allergiesSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.AppCompatSpinner>

            <ScrollView android:id="@+id/allergiesScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">
                <LinearLayout
                    android:id="@+id/allergiesCheckboxListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:visibility="visible">
                </LinearLayout>

            </ScrollView>
            <TextView
                android:id="@+id/allergiesSaveStatusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="saving now :D"/>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>